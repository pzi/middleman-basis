#!/usr/bin/env bash

echo ""
echo "===== Installing Bower dependencies"

bower install

echo ""
echo "===== Installing Gems"

bundle install

echo ""
echo "===== Removing unnecessary files"

basis_files=(
  "./CHANGELOG.md"
  "./LICENSE"
  "./.travis.yml"
)

for file in "${basis_files[@]}"
do
  if [ -f ${file} ]; then
    echo "Deleting ${file}"
    rm ${file}
  else
    echo "${file} already deleted!"
  fi
done

echo ""
echo "===== Thank you for using Middleman Basis!"
echo ""

# Self destruct
rm -rf ./bin
